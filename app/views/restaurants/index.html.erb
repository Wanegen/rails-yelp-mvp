<h1 class="m-5">Our restaurants !</h1>

<div class="row">
  <% @restaurants.each do |restaurant| %>
    <div class="col-sm-6">
      <div class="card mb-3">
          <div class="card-body">
            <h2><%= "#{restaurant.name}" %></h2>
            <%= image_tag("pizza.jpg", class: "img-fluid") %>
            <%= link_to "Go to the restaurant", restaurant_path(restaurant), class:"btn btn-primary mt-3" %>
          </div>
      </div>
    </div>
  <% end %>
</div>
