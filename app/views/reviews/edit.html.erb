<h1 class="mt-3">Edit your review</h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, input_html: { min: '0', max: '5', step: '1' }%>
  <%= f.submit "Submit review", class: "btn btn-success" %>
  <%= link_to "Go to the restaurant", restaurant_path(@restaurant), class:"btn btn-primary" %>
<% end %>
